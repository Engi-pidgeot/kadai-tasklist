<h1>idが「<%= @task.id %>」のタスクの詳細</h1>

<table class="table table-borderd" border="1" bordercolor="#33568e">
    <thead>
      <tr>
        <th>ID</th>
        <th>進捗</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <td><%= link_to @task.id, task_path(id: @task.id)%></td>
      <td><%= @task.status%></td>
      <td><%= @task.content%></td>
    </tbody>
  </table>

<%= link_to "タスクを編集", edit_task_path, class: "btn btn-success" %>
<%= link_to "タスクを削除", task_path, method: :delete, data: {confirm: "本当に削除してよろしいですか？"}, class: "btn btn-danger"%>
