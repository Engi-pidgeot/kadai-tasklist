<h1>タスク一覧</h1>
<ul>

  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>進捗</th>
        <th>内容</th>
      </tr>
    </thead>
<% @tasks.each do |task|%>    
    <tbody>
      <td><%= link_to task.id, task_path(id: task.id)%></td>
      <td><%= task.status%></td>
      <td><%= task.content%></td>
    </tbody>
  <%end%>    
  </table>
  
  


</ul>

