<h1>タスク一覧</h1>
<% if @tasks.any?%>
  <table class="table" border="1" bordercolor="#33568e">　
    <thead>
      <tr>
        <th>ID</th>
        <th>進捗</th>
        <th>内容</th>
      </tr>
    </thead>
<% @tasks.each do |task|%>    
    <tbody>
      <td><%= link_to task.id, task_path(id: task.id), class:"btn btn-success"%></td>
      <td><%= task.status%></td>
      <td><%= task.content%></td>
    </tbody>
  <% end%>
  </table>
  <%= paginate @tasks, class:"horizontal" %>
  
  <%= link_to new_task_path ,class:"btn btn-primary" do%>
    <span class="glyphicon glyphicon-pencil"></span>  新しいタスクを登録する
  <% end %>
  
<% else %>
  <p>まだタスクが登録されていません</p>
<% end %>

