<%= form_for(@task) do |f|%>
  <% if @task.errors.any? %>
    <div id="error_explanation", class="alert alert-warning">
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="row">
  <div class="col-xs-6">
    <div class="row">
      <div class="form-group col-xs-6">
        <%= f.label :status, "進捗"%>
        <%= f.select :status, [['未完','未完了'],['進行中','進行中'],['完了','完了']] ,{},class:"form-control"%>
      </div>
      
    </div>
    <div class="form-group">
      <%= f.label :content, "タスク内容"%>
      <%= f.text_field :content ,class:"form-control"%>
    </div>
    
      <%= f.submit "登録"%>
      
<% end %>

  </div>
</div>