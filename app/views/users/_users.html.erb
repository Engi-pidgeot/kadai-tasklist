<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user|%>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(user, { size: 50}) %>" alt="users image">
        </div>
        <div class="media-body">
          <div>
            <%= user.name%>
          </div>
          <div>
            <p><%= link_to "詳細を見る", user_path(user)%></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>